# HealthSync Backend Environment Variables
# Copy this file to .env and fill in your values

# Required Variables
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
PORT=4000

# MongoDB Configuration (optional - uses in-memory if not set)
MONGODB_URI=mongodb://localhost:27017/healthsync
MONGODB_DB=healthsync

# Frontend URL for CORS (optional)
FRONTEND_URL=http://localhost:3000

# Socket.IO Configuration
ENABLE_SOCKETS=false

# Email Configuration (for password reset)
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-app-password

# Google OAuth (for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys (for external services)
GROQ_API_KEY=your-groq-api-key
SERPAPI_KEY=your-serpapi-key
